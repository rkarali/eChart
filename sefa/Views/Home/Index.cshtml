<!DOCTYPE html>
<html lang="en">
<body>
    <div id="chart-container"></div>
    <script src="https://fastly.jsdelivr.net/npm/echarts@5.4.2/dist/echarts.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        #chart-container {
            position: relative;
            height: 100vh;
            width:auto;
            overflow: hidden;
        }
    </style>
    <script>
        var dom = document.getElementById('chart-container');
        var myChart = echarts.init(dom, null, {
            renderer: 'canvas',
            useDirtyRect: false
        });
        var app = {};

        var option;

        debugger;

        var aasasas = @Html.Raw(Json.Encode(ViewBag.DataPointsTarihler));

        option = {
            title: {
                text: 'Stacked Line'
            },
            tooltip: {
                trigger: 'axis'
            },
            legend: {
                data: ['CAY','ARISU','ZALA']
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                containLabel: true
            },
            toolbox: {
                feature: {
                    saveAsImage: {}
                }
            },
            xAxis: {
                type: 'category',
                boundaryGap: false,
                data: aasasas,
                axisLabel: {
                    rotate: 90
                }
            },
            yAxis: {
                type: 'value'
            },
            series: [
                {
                    name: 'CAY',
                    type: 'line',
                    step: 'CAY',
                    data: @ViewBag.DataPointsCAY
                },
                {
                    name: 'ARISU',
                    type: 'line',
                    step: 'ARISU',
                    data: @ViewBag.DataPointsARISU
                },
                {
                    name: 'ZALA',
                    type: 'line',
                    step: 'ZALA',
                    data: @ViewBag.DataPointsZALA
                }
            ]
        };

        if (option && typeof option === 'object') {
            myChart.setOption(option);
        }

        window.addEventListener('resize', myChart.resize);

    </script>
</body>
</html>